<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Whatâ€™s left in your fridge?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp"/>

        <!-- Search bar with icon and camera -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_search"
            android:padding="8dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Search for your ingredient here..."
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:textColorHint="#909090" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_manage_search_24"
                android:layout_marginEnd="16dp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_photo_camera_24"/>
        </LinearLayout>

        <!-- Meat section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meat"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_section_meat"
            android:padding="8dp"
            android:orientation="horizontal"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chicken Thighs (200g)"
                android:drawableEnd="@drawable/baseline_close_24"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beef (180g)"
                android:drawableEnd="@drawable/baseline_close_24"
                android:padding="8dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <!-- Vegetable section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vegetable"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Potato (80g)"
                android:drawableEnd="@drawable/baseline_close_24"
                android:padding="8dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <!-- Fruit section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fruit"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">
        </LinearLayout>

        <!-- Other Ingredients section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other Ingredients"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">
        </LinearLayout>

        <!-- Generate Recipes Button -->
        <Button
            android:id="@+id/generateRecipesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate Recipes"
            android:textColor="@android:color/black"
            android:background="@drawable/rounded_button"
            android:elevation="8dp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>